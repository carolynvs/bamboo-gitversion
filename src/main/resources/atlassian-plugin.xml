<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="gitversion"/>
    
    <!-- add our web resources -->
    <web-resource key="gitversion-resources" name="gitversion Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="gitversion.css" location="/css/gitversion.css"/>
        <resource type="download" name="gitversion.js" location="/js/gitversion.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>gitversion</context>
    </web-resource>

    <taskType key="GitVersionTask" name="GitVersion" class="com.carolynvs.bamboo.plugin.gitversion.GitVersionTask">
        <description>Makes GitVersion results available as Bamboo metadata and environment variables</description>
    </taskType>

    <capabilityType key="com.carolynvs.bamboo.plugin.gitversion.GitVersionCapability" name="GitVersion" class="com.carolynvs.bamboo.plugin.gitversion.GitVersionCapability" sortOrder="1000">
        <description>The GitVersion executable, e.g. C:\ProgramData\Chocolatey\lib\GitVersion.Portable.2.0.1\Tools\GitVersion.exe</description>
        <resource type="freemarker" name="edit" location="capability/edit.ftl"/>
    </capabilityType>
</atlassian-plugin>